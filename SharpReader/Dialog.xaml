<Window x:Class="SharpReader.Dialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Icon="resources\SharpReaderIcon.png"
        Name="HeaderTitle" Title="New Category" Height="200" Width="300" WindowStartupLocation="CenterOwner">
    <StackPanel Margin="10">
        <TextBlock x:Name="Prompt" Text="New category:" Margin="0,0,0,10"/>
        <TextBox x:Name="InputTextBox" Width="250" Margin="0,0,0,10"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Width="75" Click="Button_Click"/>
            <Button Content="Cancel" Width="75" Margin="5,0,0,0" Click="Cancel_Click"/>
        </StackPanel>
    </StackPanel>
</Window>