<Window x:Class="SharpReader.ComicSettings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Icon="resources\SharpReaderIcon.png"
        Name="HeaderTitle" Title="Settings" WindowStartupLocation="CenterOwner"
        SizeToContent="WidthAndHeight"
        >
    <StackPanel Margin="20">
        <WrapPanel x:Name="Form" Orientation="Vertical">
            
        </WrapPanel>
        <StackPanel Margin="10"
                    Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Save" Name="Save" Width="75" Click="Save_Click"/>
            <Button Content="Cancel" Width="75" Margin="5,0,0,0" Click="Cancel_Click"/>
        </StackPanel>
    </StackPanel>
</Window>